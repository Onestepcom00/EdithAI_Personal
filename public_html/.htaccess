RewriteEngine On
RewriteBase /

# 1️⃣ Ne pas réécrire si le fichier ou le dossier existe
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2️⃣ Réécriture pour /call/chat/XXXXX -> call.php?id=chat-XXXXX
RewriteRule ^call/chat/([a-zA-Z0-9_-]+)/?$ call.php?id=chat-$1 [L,QSA]

# 3️⃣ Réécriture pour /chat/ID -> index.php?id=chat-ID
RewriteRule ^chat/([a-zA-Z0-9_-]+)/?$ index.php?id=chat-$1 [L,QSA]